# ========================================
# BACKEND ENVIRONMENT VARIABLES
# ========================================

# Server Port
PORT=1230

# ========================================
# DATABASE CONFIGURATION
# ========================================
# For Render Deployment: Use Internal Database URL from Render PostgreSQL
# Format: postgres://user:password@hostname:5432/database
# Example: postgres://hannan_user:abc123@dpg-xyz.oregon-postgres.render.com/hannan_agribusiness
DATABASE_URL=your_database_connection_string_here

# ========================================
# AUTHENTICATION
# ========================================
# JWT Secret Key - MUST be changed in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_change_in_production

# ========================================
# CORS CONFIGURATION
# ========================================
# Frontend URL for CORS (where your frontend is hosted)
# Local development: http://localhost:2340
# Vercel production: https://your-app.vercel.app
FRONTEND_URL=http://localhost:2340

# ========================================
# APPLICATION ENVIRONMENT
# ========================================
# Set to 'production' for Render deployment
NODE_ENV=development

# ========================================
# EMAIL CONFIGURATION (Optional)
# ========================================
# For sending notifications and reminders
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password
ADMIN_EMAIL=admin@hannan.com

# ========================================
# SUPABASE CONFIGURATION (Required for Image Storage)
# ========================================
# Get these from your Supabase project settings
# Project Settings > API > Project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Project Settings > API > service_role key (keep secret!)
SUPABASE_SERVICE_KEY=your-supabase-service-role-key-here

# Storage bucket name (default: goat-images)
# Create this bucket in Supabase Storage and set it to public
SUPABASE_STORAGE_BUCKET=goat-images

# ========================================
# DEPLOYMENT NOTES
# ========================================
# 1. Images are stored in Supabase Storage as URLs for fast loading
# 2. Create 'goat-images' bucket in Supabase Storage (set to public)
# 3. Run 'npm run db:migrate' before first deployment
# 4. Run 'npm run db:setup' to create tables
# 5. Update FRONTEND_URL to match your Vercel deployment
# 6. Use INTERNAL database URL on Render (not external)
# 7. All data (database + images) stored in Supabase for scalability

